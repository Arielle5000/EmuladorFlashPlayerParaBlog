{
  "manifest_version": 2,
  "version": "0.1.9",
  "name": "Crash Bandicoot Connect - FlashPlayer",
  "description": "Emulador para jogar jogos flash no site",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "notifications",
    "*://*/*"
  ],
  "icons": {
    "16": "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/16.png",
    "32": "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/32.png",
    "48": "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/48.png",
    "64": "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/64.png",
    "128": "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/128.png",
    "256": "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/256.png",
    "512": "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/512.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/background.js"
    ]
  },
  "homepage_url": "http://crashbandicootconnect.blogspot.com/",
  "browser_action": {
    "default_title": "Click para procurar jogos do flash de Crash Bandicoot"
  },
  "sandbox": {
    "pages": [
      "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/player.html"
    ]
  },
  "content_scripts": [
    {
      "match_about_blank": true,
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/page.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/*.js",
    "https://raw.githubusercontent.com/Arielle5000/EmuladorFlashPlayerParaBlog/main/*.wasm"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{580d99ee-bcc9-47b2-a5d9-6a2c8aa855a7}"
    }
  }
}
